<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/progressBarBiru"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:background_progressbar_color="#87CEFA"
        app:background_progressbar_width="10dp"
        app:progressbar_color="#F44336"
        app:progressbar_width="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        />

    <ImageView
        android:id="@+id/fotoStudent"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/foto_mhs"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="110dp"
        android:layout_gravity="center_horizontal">
    </ImageView>

        <androidx.cardview.widget.CardView
            android:layout_below="@id/progressBarBiru"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="55dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="7dp"

            >

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBarBiru"
                android:layout_marginTop="30dp"
                android:text="Levina Khomulia"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginTop="90dp"
                android:columnCount="2"
                android:rowCount="3"
                >

                <!--                Column 1-->
                <TextView
                    android:id="@+id/txtNIM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIM"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txtIsiNIM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03082170019"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp">

                </TextView>

                <!--                Column 2-->
                <TextView
                    android:id="@+id/txtGPA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPA"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp">

                </TextView>

                <TextView
                    android:id="@+id/txtIsiGPA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.78"
                    android:textSize="16sp"
                    android:layout_marginStart="99dp"
                    android:layout_marginTop="10dp">

                </TextView>

                <!--                Column 3-->
                <TextView
                    android:id="@+id/txtIntake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intake"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp">

                </TextView>

                <TextView
                    android:id="@+id/txtIsiIntake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017"
                    android:textSize="16sp"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="10dp">

                </TextView>

            </GridLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
